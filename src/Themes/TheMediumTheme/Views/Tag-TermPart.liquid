{% assign termName = Model.ContentItem | display_text %}

<div class="container">
    <div class="mainheading">
        <h1 class="sitetitle">{{ termName | capitalize }}</h1>
        {% if Model.ContentItems.size == 1 %}
            <p class="lead">1 post tagged with <strong>{{ termName }}</strong></p>
        {% else %}
            <p class="lead">{{ Model.ContentItems.size }} posts tagged with <strong>{{ termName }}</strong></p>
        {% endif %}
    </div>

    <section class="featured-posts">
        <div class="listfeaturedtag">
            {% for item in Model.ContentItems %}
                {{ item | shape_build_display: "Summary" | shape_render }}
            {% endfor %}
        </div>
    </section>

    {% assign previousText = "← Newer Posts" | t %}
    {% assign nextText = "Older Posts →" | t %}
    {% assign previousClass = "previous" | t %}
    {% assign nextClass = "next" | t %}

    {% shape_pager Model.Pager previous_text: previousText, next_text: nextText,
        previous_class: previousClass, next_class: nextClass %}

    {{ Model.Pager | shape_render }}
</div>